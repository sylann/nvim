snippet function
	${1:myfunction}() {
		${2:echo "do something"}
	}$0

snippet if
	if [ "${1:condition}" ]; then
		$0
	fi

snippet elif
	elif [ ${1:condition} ]; then
		$0

snippet for
	for (( ${1:i} = 0; $1 < ${2:end}; $1++ )); do
		$0
	done

snippet forin
	for ${1:item} in ${2:./*} ; do
		echo "$1"
	done$0

snippet while
	while [ ${1} ]; do
		$0
	done

snippet case
	case \$${1:variable} in
		${2:value})
			${3:echo "do something"};;
	esac$0
