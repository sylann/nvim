snippet #sh
	#!/bin/sh

snippet fn
	$1() {
		$0
	}

snippet if
	if [ $1 ]; then
		$0
	fi

snippet elif
	elif [ $1 ]; then
		$0

snippet for
	for (( ${2:i} = 0; $2 < ${1}; $2++ )); do
		$0
	done

snippet forin
	for ${1} in ${2} ; do
		$0
	done

snippet while
	while [ $1 ]; do
		$0
	done

snippet case
	case $1 in
		$2)
			$0;;
	esac
